<Window x:Class="BitmapWorkstation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BitmapWorkstation"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="680">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="480"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Canvas x:Name="BitmapShowCanvas" Width="640" Height="480"></Canvas>
        </Grid>
        <Grid Grid.Row="1">
            <Button x:Name="UsingBitmapData" Content="Using BitmapData" HorizontalAlignment="Left" 
                        Height="30" FontSize="15" Click="UsingBitmapData_Click"></Button>
        </Grid>
    </Grid>
</Window>
